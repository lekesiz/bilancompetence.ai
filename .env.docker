# ============================================
# BilanCompetence.AI - Docker Compose Environment
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
COMPOSE_PROJECT_NAME=bilancompetence

# ============================================
# DATABASE - Local PostgreSQL
# ============================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=bilancompetence

# Or use Neon PostgreSQL for development
# DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# ============================================
# DATABASE - Supabase (Legacy)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=dev-jwt-secret-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10

# ============================================
# CORS & URLS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL SERVICE
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@bilancompetence.ai
SENDGRID_FROM_NAME=BilanCompetence

# ============================================
# EXTERNAL APIs
# ============================================
GEMINI_API_KEY=your-gemini-api-key
FRANCE_TRAVAIL_API_KEY=your-france-travail-api-key
OPENAI_API_KEY=your-openai-api-key

# ============================================
# STORAGE
# ============================================
STORAGE_BUCKET=bilancompetence-files
STORAGE_URL=https://your-storage-url
STORAGE_MAX_FILE_SIZE=52428800

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_REALTIME_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=BilanCompetence
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ============================================
# PGADMIN (Optional)
# ============================================
PGADMIN_EMAIL=admin@bilancompetence.local
PGADMIN_PASSWORD=admin

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# SECURITY
# ============================================
HELMET_ENABLED=true

