@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* ========================================
       DESIGN SYSTEM V3 - Inspiré de haguenau.pro
       ======================================== */

    /* Primary Colors - Bleu Royal (Haguenau.pro style) */
    --primary-50: #EFF6FF;
    --primary-100: #DBEAFE;
    --primary-200: #BFDBFE;
    --primary-300: #93C5FD;
    --primary-400: #60A5FA;
    --primary-500: #3B82F6;  /* Bleu Royal principal */
    --primary-600: #2563EB;  /* Bleu Royal foncé */
    --primary-700: #1D4ED8;
    --primary-800: #1E40AF;
    --primary-900: #1E3A8A;

    /* Secondary Colors - Violet/Purple (Haguenau.pro style) */
    --secondary-50: #FAF5FF;
    --secondary-100: #F3E8FF;
    --secondary-200: #E9D5FF;
    --secondary-300: #D8B4FE;
    --secondary-400: #C084FC;
    --secondary-500: #A855F7;  /* Violet principal */
    --secondary-600: #9333EA;
    --secondary-700: #7E22CE;
    --secondary-800: #6B21A8;
    --secondary-900: #581C87;

    /* Accent Colors - Jaune Vif (Haguenau.pro style) */
    --accent-yellow-50: #FFFBEB;
    --accent-yellow-100: #FEF3C7;
    --accent-yellow-200: #FDE68A;
    --accent-yellow-300: #FCD34D;
    --accent-yellow-400: #FBBF24;  /* Jaune Vif pour badges */
    --accent-yellow-500: #F59E0B;
    --accent-yellow-600: #D97706;
    --accent-yellow-700: #B45309;

    /* Accent Colors - Vert (Haguenau.pro style) */
    --accent-green-50: #ECFDF5;
    --accent-green-100: #D1FAE5;
    --accent-green-200: #A7F3D0;
    --accent-green-300: #6EE7B7;
    --accent-green-400: #34D399;
    --accent-green-500: #10B981;  /* Vert pour success */
    --accent-green-600: #059669;
    --accent-green-700: #047857;

    /* Accent Colors - Orange (Haguenau.pro style) */
    --accent-orange-50: #FFF7ED;
    --accent-orange-100: #FFEDD5;
    --accent-orange-200: #FED7AA;
    --accent-orange-300: #FDBA74;
    --accent-orange-400: #FB923C;
    --accent-orange-500: #F97316;  /* Orange pour warning */
    --accent-orange-600: #EA580C;
    --accent-orange-700: #C2410C;

    /* Accent Colors - Magenta (Haguenau.pro style) */
    --accent-magenta-50: #FDF4FF;
    --accent-magenta-100: #FAE8FF;
    --accent-magenta-200: #F5D0FE;
    --accent-magenta-300: #F0ABFC;
    --accent-magenta-400: #E879F9;
    --accent-magenta-500: #D946EF;  /* Magenta pour professionnels */
    --accent-magenta-600: #C026D3;
    --accent-magenta-700: #A21CAF;

    /* Neutral Colors - Gris (Haguenau.pro style) */
    --gray-50: #F9FAFB;
    --gray-100: #F3F4F6;
    --gray-200: #E5E7EB;
    --gray-300: #D1D5DB;
    --gray-400: #9CA3AF;
    --gray-500: #6B7280;
    --gray-600: #4B5563;
    --gray-700: #374151;
    --gray-800: #1F2937;
    --gray-900: #111827;

    /* Semantic Colors */
    --success-50: #ECFDF5;
    --success-500: #10B981;
    --success-600: #059669;
    --success-700: #047857;

    --warning-50: #FFF7ED;
    --warning-500: #F97316;
    --warning-600: #EA580C;
    --warning-700: #C2410C;

    --error-50: #FEF2F2;
    --error-500: #EF4444;
    --error-600: #DC2626;
    --error-700: #B91C1C;

    --info-50: #EFF6FF;
    --info-500: #3B82F6;
    --info-600: #2563EB;
    --info-700: #1D4ED8;

    /* Background & Surface */
    --bg-primary: #FFFFFF;
    --bg-secondary: #F9FAFB;
    --bg-tertiary: #F3F4F6;
    --bg-blue-light: #EFF6FF;  /* Fond bleu très clair pour sections */
    --bg-purple-light: #FAF5FF;  /* Fond violet très clair pour sections */
    --surface: #FFFFFF;
    --surface-hover: #F9FAFB;

    /* Text Colors */
    --text-primary: #111827;
    --text-secondary: #4B5563;
    --text-tertiary: #6B7280;
    --text-disabled: #9CA3AF;
    --text-inverse: #FFFFFF;

    /* Shadows - Plus prononcées (Haguenau.pro style) */
    --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.08), 0 2px 4px -1px rgba(0, 0, 0, 0.04);

    /* Border Radius - Plus arrondis (Haguenau.pro style) */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
    --radius-2xl: 32px;
    --radius-full: 9999px;

    /* Spacing - Plus généreux (Haguenau.pro style) */
    --spacing-section: 96px;  /* 24rem - Espacement entre sections */
    --spacing-section-mobile: 64px;  /* 16rem - Espacement mobile */
    --spacing-content: 48px;  /* 12rem - Espacement entre contenus */
    --spacing-card: 32px;  /* 8rem - Espacement dans les cartes */

    /* Fonts */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-heading: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;

    /* Typography Sizes - Plus grandes (Haguenau.pro style) */
    --text-hero: 72px;  /* Hero title */
    --text-hero-mobile: 48px;
    --text-h1: 56px;  /* H1 */
    --text-h1-mobile: 36px;
    --text-h2: 48px;  /* H2 */
    --text-h2-mobile: 32px;
    --text-h3: 36px;  /* H3 */
    --text-h3-mobile: 28px;
    --text-h4: 28px;  /* H4 */
    --text-h4-mobile: 24px;
    --text-h5: 24px;  /* H5 */
    --text-h5-mobile: 20px;
    --text-h6: 20px;  /* H6 */
    --text-h6-mobile: 18px;
    --text-body: 18px;  /* Body text */
    --text-body-mobile: 16px;
    --text-small: 16px;  /* Small text */
    --text-small-mobile: 14px;
  }

  .dark {
    /* Primary Colors - Dark Mode */
    --primary-50: #1E3A8A;
    --primary-100: #1E40AF;
    --primary-200: #1D4ED8;
    --primary-300: #2563EB;
    --primary-400: #3B82F6;
    --primary-500: #60A5FA;
    --primary-600: #93C5FD;
    --primary-700: #BFDBFE;
    --primary-800: #DBEAFE;
    --primary-900: #EFF6FF;

    /* Secondary Colors - Dark Mode */
    --secondary-50: #581C87;
    --secondary-100: #6B21A8;
    --secondary-200: #7E22CE;
    --secondary-300: #9333EA;
    --secondary-400: #A855F7;
    --secondary-500: #C084FC;
    --secondary-600: #D8B4FE;
    --secondary-700: #E9D5FF;
    --secondary-800: #F3E8FF;
    --secondary-900: #FAF5FF;

    /* Background & Surface - Dark Mode */
    --bg-primary: #111827;
    --bg-secondary: #1F2937;
    --bg-tertiary: #374151;
    --bg-blue-light: #1E3A8A;
    --bg-purple-light: #581C87;
    --surface: #1F2937;
    --surface-hover: #374151;

    /* Text Colors - Dark Mode (WCAG AA Compliant) */
    --text-primary: #FFFFFF;
    --text-secondary: #E5E7EB;
    --text-tertiary: #D1D5DB;
    --text-disabled: #9CA3AF;
    --text-inverse: #111827;

    /* Shadows - Dark Mode */
    --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
    --shadow-card: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
  }

  * {
    @apply border-gray-200 dark:border-gray-700;
  }

  html {
    @apply scroll-smooth;
  }

  body {
    @apply bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-50 font-sans antialiased;
  }

  /* Typography - Haguenau.pro style (grandes tailles) */
  h1, h2, h3, h4, h5, h6 {
    @apply font-heading font-bold text-gray-900 dark:text-gray-50 leading-tight;
  }

  .hero-title {
    font-size: var(--text-hero-mobile);
    line-height: 1.1;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: var(--text-hero);
    }
  }

  h1 {
    font-size: var(--text-h1-mobile);
  }

  @media (min-width: 768px) {
    h1 {
      font-size: var(--text-h1);
    }
  }

  h2 {
    font-size: var(--text-h2-mobile);
  }

  @media (min-width: 768px) {
    h2 {
      font-size: var(--text-h2);
    }
  }

  h3 {
    font-size: var(--text-h3-mobile);
  }

  @media (min-width: 768px) {
    h3 {
      font-size: var(--text-h3);
    }
  }

  h4 {
    font-size: var(--text-h4-mobile);
  }

  @media (min-width: 768px) {
    h4 {
      font-size: var(--text-h4);
    }
  }

  h5 {
    font-size: var(--text-h5-mobile);
  }

  @media (min-width: 768px) {
    h5 {
      font-size: var(--text-h5);
    }
  }

  h6 {
    font-size: var(--text-h6-mobile);
  }

  @media (min-width: 768px) {
    h6 {
      font-size: var(--text-h6);
    }
  }

  p {
    font-size: var(--text-body-mobile);
    @apply text-gray-700 dark:text-gray-300 leading-relaxed;
  }

  @media (min-width: 768px) {
    p {
      font-size: var(--text-body);
    }
  }

  a {
    @apply text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors duration-200;
  }
}

@layer components {
  /* Button Variants - Haguenau.pro style */
  .btn {
    @apply inline-flex items-center justify-center px-6 py-3 font-semibold rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed;
  }

  .btn-primary {
    @apply btn bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:ring-primary-500;
  }

  .btn-primary-gradient {
    @apply btn bg-gradient-to-r from-primary-600 to-secondary-600 hover:from-primary-700 hover:to-secondary-700 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:ring-primary-500;
  }

  .btn-success-gradient {
    @apply btn bg-gradient-to-r from-primary-600 to-accent-green-500 hover:from-primary-700 hover:to-accent-green-600 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:ring-primary-500;
  }

  .btn-secondary {
    @apply btn bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200 border-2 border-gray-300 dark:border-gray-600 shadow-md hover:shadow-lg focus:ring-primary-500;
  }

  .btn-outline {
    @apply btn bg-transparent hover:bg-primary-50 dark:hover:bg-primary-900/20 text-primary-600 dark:text-primary-400 border-2 border-primary-600 dark:border-primary-400 focus:ring-primary-500;
  }

  .btn-outline-secondary {
    @apply btn bg-transparent hover:bg-secondary-50 dark:hover:bg-secondary-900/20 text-secondary-600 dark:text-secondary-400 border-2 border-secondary-600 dark:border-secondary-400 focus:ring-secondary-500;
  }

  .btn-ghost {
    @apply btn bg-transparent hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-200 focus:ring-gray-300;
  }

  .btn-sm {
    @apply px-4 py-2 text-sm rounded-lg;
  }

  .btn-lg {
    @apply px-8 py-4 text-lg rounded-2xl;
  }

  /* Card Variants - Haguenau.pro style (coins plus arrondis, ombres douces) */
  .card {
    @apply bg-white dark:bg-gray-800 rounded-2xl shadow-card border border-gray-100 dark:border-gray-700 transition-all duration-300;
  }

  .card-hover {
    @apply card hover:shadow-lg hover:border-gray-200 dark:hover:border-gray-600;
  }

  .card-interactive {
    @apply card-hover transform hover:-translate-y-1 cursor-pointer;
  }

  .card-blue-light {
    @apply bg-blue-50 dark:bg-blue-900/20 border-blue-100 dark:border-blue-800;
  }

  .card-purple-light {
    @apply bg-purple-50 dark:bg-purple-900/20 border-purple-100 dark:border-purple-800;
  }

  .card-gradient {
    @apply bg-gradient-to-br from-primary-600 to-secondary-600 text-white border-0;
  }

  /* Input Variants */
  .input {
    @apply w-full px-4 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border border-gray-300 dark:border-gray-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 placeholder:text-gray-400;
  }

  .input-error {
    @apply input border-error-500 focus:ring-error-500;
  }

  /* Badge Variants - Haguenau.pro style */
  .badge {
    @apply inline-flex items-center px-3 py-1 text-sm font-medium rounded-full;
  }

  .badge-primary {
    @apply badge bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200;
  }

  .badge-secondary {
    @apply badge bg-secondary-100 dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200;
  }

  .badge-yellow {
    @apply badge bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200;
  }

  .badge-success {
    @apply badge bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200;
  }

  .badge-warning {
    @apply badge bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200;
  }

  .badge-error {
    @apply badge bg-error-100 dark:bg-error-900 text-error-800 dark:text-error-200;
  }

  .badge-info {
    @apply badge bg-info-100 dark:bg-info-900 text-info-800 dark:text-info-200;
  }

  /* Section Layout - Haguenau.pro style (espacement plus généreux) */
  .section {
    padding-top: var(--spacing-section-mobile);
    padding-bottom: var(--spacing-section-mobile);
    @apply px-4 md:px-6;
  }

  @media (min-width: 768px) {
    .section {
      padding-top: var(--spacing-section);
      padding-bottom: var(--spacing-section);
    }
  }

  .container {
    @apply max-w-7xl mx-auto;
  }

  /* Gradient Backgrounds - Haguenau.pro style */
  .gradient-primary {
    @apply bg-gradient-to-br from-primary-500 to-primary-700;
  }

  .gradient-hero {
    @apply bg-gradient-to-br from-primary-600 via-secondary-600 to-secondary-700;
  }

  .gradient-blue-purple {
    @apply bg-gradient-to-r from-primary-600 to-secondary-600;
  }

  .gradient-blue-green {
    @apply bg-gradient-to-r from-primary-600 to-accent-green-500;
  }

  .gradient-stats {
    @apply bg-gradient-to-br from-primary-600 to-secondary-600;
  }

  /* Number Circle - Haguenau.pro style */
  .number-circle {
    @apply inline-flex items-center justify-center w-12 h-12 rounded-full bg-gradient-to-br from-primary-600 to-secondary-600 text-white font-bold text-xl shadow-md;
  }

  /* Stats Card - Haguenau.pro style */
  .stats-card {
    @apply card-gradient rounded-3xl p-8 text-center;
  }

  .stats-number {
    font-size: 64px;
    @apply font-bold leading-none mb-2;
  }

  @media (min-width: 768px) {
    .stats-number {
      font-size: 80px;
    }
  }
}

@layer utilities {
  /* Text Utilities */
  .text-balance {
    text-wrap: balance;
  }

  /* Scrollbar Styling */
  .scrollbar-thin {
    scrollbar-width: thin;
    scrollbar-color: theme('colors.gray.400') theme('colors.gray.100');
  }

  .scrollbar-thin::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  .scrollbar-thin::-webkit-scrollbar-track {
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb {
    @apply bg-gray-400 dark:bg-gray-600 rounded-full;
  }

  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    @apply bg-gray-500 dark:bg-gray-500;
  }

  /* Animation Utilities */
  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
  }

  .animate-fade-in-down {
    animation: fade-in-down 0.6s ease-out forwards;
  }

  .animate-scale-in {
    animation: scale-in 0.3s ease-out forwards;
  }

  .animate-slide-in-left {
    animation: slide-in-left 0.5s ease-out forwards;
  }

  .animate-slide-in-right {
    animation: slide-in-right 0.5s ease-out forwards;
  }
}

/* Keyframe Animations */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-in-down {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale-in {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slide-in-left {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slide-in-right {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Blob Animation for Hero Section */
@keyframes blob {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

.animate-blob {
  animation: blob 7s infinite;
}

.animation-delay-2000 {
  animation-delay: 2s;
}

.animation-delay-4000 {
  animation-delay: 4s;
}

/* Loading Spinner */
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.animate-spin-slow {
  animation: spin 3s linear infinite;
}

/* Pulse Animation */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.animate-pulse-slow {
  animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* ================================================
   ACCESSIBILITY (PHASE 3 - November 2025)
   ================================================ */

/* Focus Visible - Enhanced keyboard navigation */
*:focus-visible {
  @apply outline-none ring-2 ring-primary-500 ring-offset-2;
}

/* Skip to main content link */
.sr-only:not(:focus):not(:active) {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  * {
    border-width: 2px !important;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* Focus visible for interactive elements */
a:focus-visible,
button:focus-visible,
input:focus-visible,
textarea:focus-visible,
select:focus-visible {
  @apply outline-none ring-2 ring-primary-500 ring-offset-2;
}

/* Legacy support */
.focus-visible:focus-visible {
  @apply outline-none ring-2 ring-primary-500 ring-offset-2;
}

/* Print Styles */
@media print {
  .no-print {
    display: none !important;
  }
  
  body {
    @apply bg-white text-black;
  }
}

